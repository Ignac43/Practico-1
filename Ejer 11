#include <iostream>
using namespace std;

int main() {
    double P;
    double costo;

    cout << "Ingrese el peso de la carta en gramos (P): ";
    cin >> P;

    if (P > 0 && P < 50) {
        costo = 1.50;
        cout << "El costo de envio es de Bs. " << costo << endl;
    } else if (P >= 50 && P <= 100) {
        costo = 4.00;
        cout << "El costo de envio es de Bs. " << costo << endl;
    } else if (P > 100 && P < 200) {
        costo = 6.00;
        cout << "El costo de envio es de Bs. " << costo << endl;
    } else if (P >= 200 && P < 350) {
        costo = 10.50;
        cout << "El costo de envio es de Bs. " << costo << endl;
    } else if (P >= 350 && P <= 500) {
        costo = 15.00;
        cout << "El costo de envio es de Bs. " << costo << endl;
    } else if (P > 500) {
        cout << "NO PUEDE ENVIAR COMO CARTA" << endl;
    } else {
        cout << "Peso no valido. Ingrese un valor positivo." << endl;
    }

    return 0;
}
